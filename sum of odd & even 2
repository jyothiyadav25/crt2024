#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   int n;
    scanf("%d",&n);
    int a[n],i;
    int sum_e=0;
    int sum_o=0;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]%2==0)
        {
            sum_e=sum_e+a[i];
        }
        else{
            sum_o=sum_o+a[i];
        }
    }
    printf("%d\n%d",sum_o,sum_e);
    return 0;
}
